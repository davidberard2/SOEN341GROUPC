<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="225dp"
        android:gravity="center_vertical"
        android:text="Display Name"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="17dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:text="Email"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_name" />

    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@+id/profile_name"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/default_photo" />

    <ImageButton
        android:id="@+id/profile_add_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        app:srcCompat="@android:drawable/ic_menu_camera"
        app:layout_constraintRight_toRightOf="@+id/profile_photo"
        app:layout_constraintBottom_toBottomOf="@+id/profile_photo"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/profile_phone_number"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:text="Phone Number"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_email"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/profile_ZIP"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:text="ZIP"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_phone_number"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@android:drawable/ic_menu_edit"
        app:layout_constraintLeft_toRightOf="@+id/profile_name"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        app:layout_constraintTop_toTopOf="@+id/profile_name"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_name"
        android:layout_marginBottom="8dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@android:drawable/ic_menu_edit"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/profile_email"
        app:layout_constraintBottom_toBottomOf="@+id/profile_email"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/profile_email"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@android:drawable/ic_menu_edit"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/profile_phone_number"
        app:layout_constraintTop_toTopOf="@+id/profile_phone_number"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_phone_number"
        android:layout_marginBottom="8dp" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@android:drawable/ic_menu_edit"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/profile_ZIP"
        app:layout_constraintTop_toTopOf="@+id/profile_ZIP"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_ZIP"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>